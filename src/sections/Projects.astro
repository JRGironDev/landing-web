            <h3 class="uppercase tracking-tighter text-8xl font-bold">
              {project.title}
            </h3>
            <h4 class="uppercase text-2xl text-left group-hover:opacity-0 transition-opacity duration-700 ease-project-timing">
              {project.subtitle}
            </h4>
          </div>

